{
  "name": "Account",
  "base": "PersistedModel",
  "properties": {
    "otNymID": {
      "type": "string",
      "required": true
    },
    "otAccountID": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "balance": {
      "type": "number",
      "required": true
    },
    "balanceDate": {
      "type": "date",
      "required": true
    },
    "userID": {
      "type": "number",
      "required": true
    },
    "currencyID": {
        "type": "number",
        "required": true
    }
  },
  "validations": [],
  "relations": {
    "currency": {
      "type": "belongsTo",
      "model": "Currency",
      "foreignKey": "currencyID"
    },
    "user": {
        "type": "belongsTo",
        "model": "LastFlagUser",
        "foreignKey": "userID"
    },
    "sendTransactions": {
        "type": "hasMany",
        "model": "Transaction",
        "foreignKey": "sourceAccountID"
    },
    "receiveTransactions": {
        "type": "hasMany",
        "model": "Transaction",
        "foreignKey": "destinationAccountID"
    },
    "transactions": {
        "type": "hasMany",
        "model": "Transaction",
        "foreignKey": "destinationAccountID"
    }
  },
  "acls": [],
  "methods": []
}
